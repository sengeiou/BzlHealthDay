<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/li_view"
    android:orientation="horizontal">

    <com.bozlun.healthday.android.friend.views.CharPortraitView
        android:id="@+id/cv_portrait"
        android:layout_width="@dimen/size_35"
        android:layout_height="@dimen/size_35"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/size_15"
        android:padding="@dimen/size_5"
        android:textColor="#ffffff"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tv_name_list"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_50"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/size_20"
        android:text="15591061973"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_20"
        tools:ignore="HardcodedText,RtlSymmetry" />


    <Button
        android:id="@+id/btn_find_list"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_35"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/size_3"
        android:layout_marginTop="@dimen/size_5"
        android:layout_marginEnd="@dimen/size_7"
        android:textAllCaps="false"
        android:layout_marginBottom="@dimen/size_5"
        android:background="@drawable/btn_blue_background_off"
        android:gravity="center"
        android:text="@string/string_add"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        android:visibility="visible"
        tools:ignore="HardcodedText" />

</LinearLayout>