            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_120"
                android:background="@mipmap/ic_road_line"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <EditText
                        android:textCursorDrawable="@drawable/bg_txt_cursor"
                        android:id="@+id/code_et_regieg"
                        style="@style/MyEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:drawableStart="@mipmap/ic_register_code"
                        android:drawablePadding="@dimen/size_10"
                        android:hint="@string/input_code"
                        android:inputType="number"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="#ebf4f4f4"
                        android:textSize="@dimen/sp_17" />


                    <!--android:background="@drawable/blue_border_btn_selector"-->
                    <Button
                        android:id="@+id/send_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_40"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/size_5"
                        android:layout_marginRight="@dimen/size_5"
                        android:background="@mipmap/ic_register_getcode"
                        android:padding="@dimen/size_5"
                        android:text="@string/send_code"
                        android:textColor="#E4FF00" />
                </RelativeLayout>


                <EditText
                    android:textCursorDrawable="@drawable/bg_txt_cursor"
                    android:id="@+id/password_logonregigter"
                    style="@style/MyEditText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableStart="@mipmap/ic_register_pass"
                    android:drawablePadding="@dimen/size_10"
                    android:hint="@string/input_password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="#ebf4f4f4"
                    android:textSize="@dimen/sp_17"/>


            </LinearLayout>


            <!--android:background="@drawable/blue_btn_selector"-->
            <Button
                android:id="@+id/login_btn_reger"
                style="@style/match_btn"
                android:textStyle="bold"
                android:textColor="@color/new_colorAccent"
                android:layout_marginTop="@dimen/size_30"
                android:background="@mipmap/ic_login_back"
                android:text="@string/user_regsiter"
                android:textAllCaps="false" />

            <!--android:background="@drawable/blue_btn_selector"-->
            <Button
                android:id="@+id/login_btn_emil_reger"
                style="@style/match_btn"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/size_30"
                android:background="@mipmap/ic_register_cirece"
                android:text="@string/user_emil_regsiter"
                android:textAllCaps="false" />


        </LinearLayout>


        <ListView
            android:id="@+id/lv_register"
            android:layout_marginTop="@dimen/size_60"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="#e7ffffff"
            android:scrollbars="none"
            android:visibility="gone" />
    </RelativeLayout>



