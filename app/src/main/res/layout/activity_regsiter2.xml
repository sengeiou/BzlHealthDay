    <RelativeLayout
        android:paddingTop="@dimen/size_40"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp">


        <LinearLayout
            android:layout_marginStart="@dimen/size_25"
            android:layout_marginEnd="@dimen/size_25"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/roateImgView"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_phone_code_more" />

                <TextView
                    android:id="@+id/tv_phone_head"
                    android:layout_width="@dimen/size_70"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="+86"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />


                <EditText
                    android:textCursorDrawable="@drawable/bg_txt_cursor"
                    android:id="@+id/username_regsiter"
                    style="@style/MyEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_60"
                    android:background="@null"
                    android:drawablePadding="@dimen/size_10"
                    android:hint="@string/input_name"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="#ebf4f4f4"
                    android:textSize="@dimen/sp_17" />
            </LinearLayout>

