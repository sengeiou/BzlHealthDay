<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/comment_b30_title_layout"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#FF8E0D"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/bloadCurrDateLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10"
                android:src="@drawable/arrow_white_left"/>

            <TextView
                android:id="@+id/bloadCurrDateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/bloadCurrDateRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10"
                android:src="@drawable/arrow_white_right"/>
        </LinearLayout>




        <com.bozlun.healthday.android.b30.b30view.CusB30CusBloadView
            android:id="@+id/friendCusB30BpView"
            android:layout_width="match_parent"
            android:background="#FF8E0D"
            android:layout_height="150dp" />



    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_16"
        android:text="@string/bloodpressure"
        android:textColor="#1C1C1C"
        android:layout_marginLeft="@dimen/size_10"
        android:padding="@dimen/size_3"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:layout_marginLeft="@dimen/size_15"
        android:background="@color/chang_white"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/friendDetailBloadRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>