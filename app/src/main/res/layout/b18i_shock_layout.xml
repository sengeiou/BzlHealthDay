<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/b18i_titil_bar" />

    <LinearLayout
        android:id="@+id/shock_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_15"
            android:layout_weight="1"
            android:padding="@dimen/size_5"
            android:text="@string/close_str"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_17" />

        <ImageView
            android:id="@+id/shock_image1"
            android:src="@drawable/screen_style_check"
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_25"
            android:layout_marginEnd="@dimen/size_8"
            android:visibility="invisible"  />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/help_button_view"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/shock_weak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/size_8">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_15"
            android:layout_weight="1"
            android:padding="@dimen/size_5"
            android:text="@string/weak_str"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_17" />

        <ImageView
            android:id="@+id/shock_image2"
            android:src="@drawable/screen_style_check"
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_25"
            android:layout_marginEnd="@dimen/size_8"
            android:visibility="invisible" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/help_button_view" />

    <LinearLayout
        android:id="@+id/shock_standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/size_8">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_15"
            android:layout_weight="1"
            android:padding="@dimen/size_5"
            android:text="@string/standard_str"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_17" />

        <ImageView
            android:id="@+id/shock_image3"
            android:src="@drawable/screen_style_check"
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_25"
            android:layout_marginEnd="@dimen/size_8"
            android:visibility="invisible"  />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/help_button_view" />

    <LinearLayout
        android:id="@+id/shock_strong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/size_8">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_15"
            android:layout_weight="1"
            android:padding="@dimen/size_5"
            android:text="@string/strong_str"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_17" />

        <ImageView
            android:id="@+id/shock_image4"
            android:src="@drawable/screen_style_check"
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_25"
            android:layout_marginEnd="@dimen/size_8"
            android:visibility="invisible"  />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/help_button_view" />
</LinearLayout>