<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/new_search_title"
        android:id="@+id/in_bar"/>


    <LinearLayout
        android:layout_marginTop="@dimen/size_20"
        android:layout_below="@+id/in_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="@dimen/size_7">


        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/b18i_selected_bg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/size_5"
            android:paddingBottom="@dimen/size_5">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_8"
                android:src="@mipmap/image_w30s_taishouliangping"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="防丢开关"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"
                tools:ignore="InefficientWeight,RtlHardcoded" />


            <ToggleButton
                android:id="@+id/switch_fangdiu"
                style="@style/B30MsgToggleStyle" />


        </LinearLayout>

        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/size_45"
            android:background="@color/help_button_view"
            tools:ignore="RtlHardcoded" />



        <LinearLayout
            android:id="@+id/line_heart_auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/b18i_selected_bg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/size_5"
            android:paddingBottom="@dimen/size_5">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_8"
                android:src="@mipmap/image_w30s_heartr"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/Automaticheartrate"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"
                tools:ignore="InefficientWeight,RtlHardcoded" />


            <ToggleButton
                android:id="@+id/switch_heart"
                style="@style/B30MsgToggleStyle" />


        </LinearLayout>



        <LinearLayout
            android:visibility="gone"
            android:id="@+id/auto_heart_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/line_gaoya"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingTop="@dimen/sp_10"
                android:paddingBottom="@dimen/sp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center"
                    android:text="高值" />

                <TextView
                    android:id="@+id/hight_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="180" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_diya"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingTop="@dimen/sp_10"
                android:paddingBottom="@dimen/sp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center"
                    android:text="低值" />

                <TextView
                    android:id="@+id/low_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="60" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/size_45"
            android:visibility="gone"
            android:background="@color/help_button_view"
            tools:ignore="RtlHardcoded" />

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/b18i_selected_bg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/size_5"
            android:paddingBottom="@dimen/size_5">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_8"
                android:src="@mipmap/image_w30s_wurao"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="强制睡眠"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"
                tools:ignore="InefficientWeight,RtlHardcoded" />

            <ToggleButton
                android:checked="true"
                android:id="@+id/switch_must_sleep"
                style="@style/B30MsgToggleStyle" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/size_45"
            android:background="@color/help_button_view"
            tools:ignore="RtlHardcoded" />

        <LinearLayout
            android:id="@+id/line_sleep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/b18i_selected_bg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/size_5"
            android:paddingBottom="@dimen/size_5">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_8"
                android:src="@mipmap/image_w30s_wurao"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/preset_sleep"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"
                tools:ignore="InefficientWeight,RtlHardcoded" />

            <ToggleButton
                android:id="@+id/switch_nodisturb"
                style="@style/B30MsgToggleStyle" />


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/auto_sleep_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/sp_10">

            <LinearLayout
                android:id="@+id/line_rushui"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingTop="@dimen/sp_10"
                android:paddingBottom="@dimen/sp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center"
                    android:text="入睡" />

                <TextView
                    android:id="@+id/start_sleep"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="20:30" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_qingxing"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingTop="@dimen/sp_10"
                android:paddingBottom="@dimen/sp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center"
                    android:text="清醒" />

                <TextView
                    android:id="@+id/end_sleep"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="07:30" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/help_button_view" />



    </LinearLayout>

</RelativeLayout>