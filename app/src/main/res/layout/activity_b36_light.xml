<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/appbar_toolbar"/>



    <RelativeLayout
        style="@style/B30DeviceRelStyle"
        android:background="@drawable/square_white_btn_change">



        <TextView
            style="@style/B30DeviceStyle"
            android:text="@string/b36_auto_light" />


        <ToggleButton
            android:id="@+id/privateBloadToggleBtn"
            android:layout_width="@dimen/size_70"
            android:layout_height="@dimen/size_40"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size_3"
            android:background="@drawable/toggle_select"
            android:textOff="@null"
            android:textOn="@null" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/chang_white" />


    <LinearLayout
        android:id="@+id/b36IsAutoLin"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">



    <TextView
        style="@style/B30DeviceStyle"
        android:text="@string/b36_set_light_index" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="25dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_b36_screen_light"
            android:layout_height="25dp" />


        <SeekBar
            android:id="@+id/b36LightSeekBar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="35dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_b36_screen_light"
            android:layout_height="35dp" />


    </LinearLayout>
    </LinearLayout>

</LinearLayout>