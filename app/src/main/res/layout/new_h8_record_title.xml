<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_h8_record_titleLin"
    android:layout_width="match_parent"
    android:layout_height="?android:actionBarSize"
    android:gravity="center"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/newH8RecordTopRel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:padding="@dimen/size_5">

        <ImageView
            android:id="@+id/h8Img11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/h8_conn" />


        <TextView
            android:id="@+id/new_h8_recordwatch_connectStateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/h8Img11"
            android:gravity="center"
            android:text=""
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            tools:ignore="RtlHardcoded" />


    </RelativeLayout>


    <TextView
        android:id="@+id/new_h8_recordtop_dateTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/new_h8_recordPhotoImg"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/size_8"
            android:visibility="invisible"
            android:background="@mipmap/photo_1" />


        <ImageView
            android:id="@+id/new_h8_recordShareImg"
            android:layout_width="@dimen/size_23"
            android:layout_height="@dimen/size_23"
            android:layout_gravity="center"
            android:background="@mipmap/record_share" />



    </LinearLayout>


</LinearLayout>