<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/find_frend_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/size_8"
    android:paddingTop="@dimen/size_10"
    android:paddingEnd="@dimen/size_5"
    android:paddingBottom="@dimen/size_2"
    android:visibility="visible">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imahe_list_heard"
            android:layout_width="@dimen/size_35"
            android:layout_height="@dimen/size_35"
            android:layout_marginEnd="@dimen/size_7"
            android:src="@mipmap/image_paobu_selete_no" />


        <TextView
            android:id="@+id/user_names"
            android:layout_width="@dimen/size_110"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center_horizontal|start"
            android:maxLines="1"
            android:text="RaceFitPro"
            android:textColor="#555555"
            android:textSize="@dimen/sp_15"
            tools:ignore="HardcodedText" />


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/frend_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical|end"
            android:text="@string/sex_nan"
            android:textColor="@color/new_colorAccent"
            android:textSize="@dimen/sp_15"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/frend_birthday"
            android:layout_width="@dimen/size_50"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/size_3"
            android:gravity="center"
            android:text="18"
            android:textColor="#555555"
            android:textSize="@dimen/sp_15"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.2" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_35"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/size_5">

        <CheckBox
            android:visibility="invisible"
            android:id="@+id/mine_detailed_information"
            android:text="对好友显数据"
            android:checked="true"
            android:textColor="#444444"
            android:textSize="@dimen/sp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

        </Space>

        <Button
            android:id="@+id/btn_find"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/size_3"
            android:background="@color/new_colorAccent"
            android:gravity="center"
            android:text="@string/string_agree_frend"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/size_3"
            android:background="@color/new_colorAccent"
            android:gravity="center"
            android:text="@string/string_refuse_frend"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:visibility="visible"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>