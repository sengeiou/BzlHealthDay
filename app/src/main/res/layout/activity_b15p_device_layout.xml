                    android:src="@drawable/fgm_fitness_arrow_left" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1" />

            <RelativeLayout
                android:id="@+id/b31DevicePtoRel"
