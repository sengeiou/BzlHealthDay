<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:background="@color/b30_sport"
    android:layout_height="wrap_content">


    <com.github.mikephil.charting.charts.LineChart
        android:layout_marginTop="25dp"
        android:id="@+id/homeSpo2LinChartView"
        android:layout_width="match_parent"
        android:background="@color/b30_sport"
        android:layout_height="180dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/size__15"
        android:layout_height="wrap_content">


        <TextView
            android:text="今日睡眠血氧体检"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/size_5"
            android:layout_width="wrap_content"
            android:textColor="#6074BF"
            android:layout_height="wrap_content"
            tools:ignore="RtlHardcoded" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="@dimen/size_5"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/size_35"
                android:background="@drawable/fgm_home_spo2h"
                android:layout_height="@dimen/size_35" />


            <TextView
                android:id="@+id/b31Spo2AveTv"
                android:layout_width="wrap_content"
                android:text="@string/ave_value"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#6074BF"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_height="wrap_content" />

        </LinearLayout>







    </RelativeLayout>

    <View
        android:id="@+id/b31BpOxyLin"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>


</FrameLayout>