<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_normal"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title=" ">

        <TextView
            android:id="@+id/bar_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="title"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_17" />

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/b18i_selected_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/size_5"
        android:paddingBottom="@dimen/size_5">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_8"
            android:visibility="gone"
            android:src="@mipmap/image_w30s_taishouliangping"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/string_my_frend_privacy_step"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            tools:ignore="InefficientWeight,RtlHardcoded" />


        <ToggleButton
            android:id="@+id/switch_step"
            style="@style/B30MsgToggleStyle" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/b18i_selected_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/size_5"
        android:paddingBottom="@dimen/size_5">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_8"
            android:visibility="gone"
            android:src="@mipmap/image_w30s_taishouliangping"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/string_my_frend_privacy_sleep"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            tools:ignore="InefficientWeight,RtlHardcoded" />


        <ToggleButton
            android:id="@+id/switch_sleep"
            style="@style/B30MsgToggleStyle" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/b18i_selected_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/size_5"
        android:paddingBottom="@dimen/size_5">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_8"
            android:visibility="gone"
            android:src="@mipmap/image_w30s_taishouliangping"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/string_my_frend_privacy_heart"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            tools:ignore="InefficientWeight,RtlHardcoded" />


        <ToggleButton
            android:id="@+id/switch_heart"
            style="@style/B30MsgToggleStyle" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd" />

</LinearLayout>