<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/layout_radious"
    android:id="@+id/hrvDescLin"
    android:padding="5dp"
    android:gravity="center"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hrvDescTitleTv"
            android:layout_width="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/red"
            android:layout_centerInParent="true"

            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/hrvDescCancleImg"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_del_img"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
           android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />

    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/chang_white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:text="2000"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="match_parent">


            <com.bozlun.healthday.android.b31.hrv.CusRateTextView
                android:id="@+id/hrdDescCusTv"
                android:text="RRN+1(ms)"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                app:cus_tv_degree="90"
                android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/hrvDescShowImg"
                android:layout_width="wrap_content"
                android:layout_height="130dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="0"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="RRN(MS)"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="2000"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:gravity="right"
                android:layout_height="wrap_content" />



        </LinearLayout>


        <TextView
            android:id="@+id/hrvDescShowTv"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:gravity="left"
            android:padding="5dp"
            android:layout_margin="8dp"
            android:lineSpacingExtra="3dp"
            android:background="@drawable/read_content_radius_layout"
            android:layout_height="wrap_content" />


    </LinearLayout>



</LinearLayout>