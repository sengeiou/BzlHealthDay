<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical">

    <include layout="@layout/appbar_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/btn_helps"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45"
                android:layout_marginTop="1dp"
                android:background="#EE3A8C"
                android:text="一键求救"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <TextView
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginBottom="10dp"
                android:text="长按编辑紧急内容"
                android:textColor="#807B7B"
                android:textSize="@dimen/text_size_14" />


            <TextView
                android:hint="长按编辑紧急内容"
                android:id="@+id/text_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:background="@drawable/hellp_gray_solid"
                android:maxLines="7"
                android:minLines="7"
                android:textSize="@dimen/text_size_14"
                android:padding="5dp"
                android:text=""
                android:textColor="#000"
                tools:ignore="HardcodedText" />


            <!--111111111-->
            <android.support.v7.widget.CardView
                android:layout_marginTop="13dp"
                android:id="@+id/car_person_one"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="0.1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_5">


                    <TextView
                        android:id="@+id/t_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_5"
                        android:padding="5dp"
                        android:text="紧急联系人 一"
                        android:textColor="#807B7B"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_marginBottom="@dimen/size_5"
                        android:id="@+id/text_user_name_one"
                        android:layout_width="@dimen/size_80"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t_one"
                        android:gravity="center"
                        android:lines="1"
                        android:text=""
                        android:textColor="#B8B2B2"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_marginBottom="@dimen/size_5"
                        android:id="@+id/text_user_phone_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t_one"
                        android:layout_toRightOf="@+id/text_user_name_one"
                        android:text=""
                        android:hint="长按编辑"
                        android:textColor="#B8B2B2"
                        android:textSize="@dimen/text_size_14" />


                    <ImageView
                        android:id="@+id/image_one"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:src="@mipmap/ic_lianxiren"
                        android:layout_width="@dimen/size_50"
                        android:layout_height="@dimen/size_35" />

                </RelativeLayout>


            </android.support.v7.widget.CardView>


            <!--22222222222222222-->
            <android.support.v7.widget.CardView
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:layout_marginTop="13dp"
                android:id="@+id/car_person_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="0.1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
