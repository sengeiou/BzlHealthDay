                    <TextView
                        android:id="@+id/t_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_5"
                        android:padding="5dp"
                        android:text="紧急联系人 二"
                        android:textColor="#807B7B"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_marginBottom="@dimen/size_5"
                        android:id="@+id/text_user_name_two"
                        android:layout_width="@dimen/size_80"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t_two"
                        android:gravity="center"
                        android:lines="1"
                        android:textColor="#B8B2B2"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_marginBottom="@dimen/size_5"
                        android:id="@+id/text_user_phone_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t_two"
                        android:layout_toRightOf="@+id/text_user_name_two"
                        android:text=""
                        android:hint="长按编辑紧急内容"
                        android:textColor="#B8B2B2"
                        android:textSize="@dimen/text_size_14" />


                    <ImageView
                        android:id="@+id/image_two"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:src="@mipmap/ic_lianxiren"
                        android:layout_width="@dimen/size_50"
                        android:layout_height="@dimen/size_35" />
                </RelativeLayout>


            </android.support.v7.widget.CardView>


            <!--33333333-->
            <android.support.v7.widget.CardView
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:layout_marginTop="13dp"
                android:id="@+id/car_person_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="0.1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_5">


                    <TextView
                        android:id="@+id/t_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_5"
                        android:padding="5dp"
                        android:text="紧急联系人 三"
                        android:textColor="#807B7B"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_marginBottom="@dimen/size_5"
                        android:id="@+id/text_user_name_three"
                        android:layout_width="@dimen/size_80"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t_three"
                        android:gravity="center"
                        android:text=""
                        android:lines="1"
                        android:textColor="#B8B2B2"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_marginBottom="@dimen/size_5"
                        android:id="@+id/text_user_phone_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t_three"
                        android:layout_toRightOf="@+id/text_user_name_three"
                        android:text=""
                        android:hint="长按编辑紧急内容"
                        android:textColor="#B8B2B2"
                        android:textSize="@dimen/text_size_14" />


                    <ImageView
                        android:id="@+id/image_three"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:src="@mipmap/ic_lianxiren"
                        android:layout_width="@dimen/size_50"
                        android:layout_height="@dimen/size_35" />
                </RelativeLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>


    </ScrollView>

