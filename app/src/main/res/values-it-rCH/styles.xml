    <!--Toggle的样式-->
    <style name="B30MsgToggleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/toggle_select</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="B30ToggTxtStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/size_15</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/size_5</item>
        <item name="android:textColor">#1C1C1C</item>
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>


    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>


    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
    </style>

    <style name="Splash_Theam" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--自定义toobar属性-->
    <style name="AppTheme.PopupOverlay" parent="AppTheme" >
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:src" parent="@android:style/Widget.ActionButton.Overflow">@mipmap/image_add</item>-->
        <item name="overlapAnchor" parent="Widget.AppCompat.Light.PopupMenu.Overflow">false</item> <!--把该属性改为false即可使menu位置位于toolbar之下-->
    </style>

    <!--//好友tab字体大小-->
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/sp_17</item>
    </style>
</resources>
